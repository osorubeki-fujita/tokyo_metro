<% if @platform_info_tabs.present? %>
function changePlatformInfoTab( tabname ) {
  <% @platform_info_tabs.each do | tab_id | %>
  // 全部消す
  document.getElementById('<%= tab_id %>').style.display = 'none' ;
  <% end %>
  // 指定箇所のみ表示
  document.getElementById( tabname ).style.display = 'block' ;
}
<% end %>