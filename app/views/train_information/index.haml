- real_time_info_processor = ::TokyoMetro::ApiDecorator::RealTimeInfos.new( request , @railway_lines )

= render "common_content"

- content_for :right_contents do
  = ::TokyoMetro::App::Renderer::Twitter.new( request , :tokyo_metro ).render
  = real_time_info_processor.render_meta_datum( include_train_locations: false )

= ::TrainInformationDecorator.render_top_title( request , domain_id_name: :train_information_title )
= real_time_info_processor.render
= ::TokyoMetro::App::Renderer::StationMatrix.new( request , @railway_lines , make_link_to_railway_line: true ).render
= ::TokyoMetro::App::Renderer::StationLinkList.new( request , @tokyo_metro_station_dictionary_including_main_info ).render