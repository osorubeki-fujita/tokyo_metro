= render "common_content"

- content_for :right_contents do
  = @twitter_processor.render
  = @real_time_info_processor.render_meta_datum( include_train_location_infos: true )
  %div{ id: :links_to_real_time_info_pages_of_railway_lines }
    %div{ class: :title }<
      = "各路線の列車運行・位置情報"
    %ul{ id: :links_to_railway_line_pages , class: [ :links , :clearfix ] }
      - ::RailwayLine.tokyo_metro( including_branch_line: false ).each do | railway_line |
        = ::TokyoMetro::App::Renderer::RealTimeInfos::SideMenu::LinkToRailwayLinePage.new( request , railway_line.decorate ).render

= ::RailwayLineDecorator.render_title_of_train_location( @railway_lines )
= @real_time_info_processor.render( include_train_location_infos: true )
