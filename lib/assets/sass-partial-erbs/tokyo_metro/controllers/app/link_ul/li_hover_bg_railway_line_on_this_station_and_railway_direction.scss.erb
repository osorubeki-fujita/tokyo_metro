//-------- マウスオーバー時の文字色・背景色の設定（路線ページ）
//---- jQuery で hover クラスを追加・削除

//---- 方面

@mixin linkToRailwayDirectionColorSetting( $color , $rate: 1 ) {
  &.hover {
    .railway_direction {
      .text_en {
        color: desaturate( $color , 60% ) ;
      }
    }
  }
}

//---- 駅に関連する路線の領域

@mixin linkToRailwayLineColorSettingOfThisStation( $color , $rate: 1 ) {
  &.this_station {
    background: {
      color: rgba( $color , 0.1 * $rate ) ;
    }
    .text {
      .text_en {
        color: desaturate( $color , 60% ) ;
      }
    }
  }
}

//---- 同じページへのリンクを含む領域

@mixin linkToRailwayLineColorSettingOfThisPage( $color , $rate: 1 ) {
  &.this_page {
    background: {
      color: rgba( $color , 0.2 * $rate ) ;
    }
    .text {
      .text_en {
        color: desaturate( $color , 90% ) ;
      }
    }
  }
}

