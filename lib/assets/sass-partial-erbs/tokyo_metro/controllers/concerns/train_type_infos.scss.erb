<% # 路線の id %>
<% railway_line_info_ids = train_type_infos_grouped_by_railway_line.keys.sort %>

@charset "utf-8";

@import 'train_type_infos/box.scss' ;

#train_type_infos {
  .train_type_displayed {
    @extend %colorBoxBase_48_144 ;
  }
  .train_type_displayed_black {
    @extend %colorBoxBase_48_144 ;
  }
}

.through_operation_info_box {
  .train_type_displayed {
    @extend %colorBoxBase_32_64 ;
  }
  .train_type_displayed_black {
    @extend %colorBoxBase_32_64 ;
  }
}

<% railway_line_info_ids.each do | railway_line_info_id | %>
  <% train_type_infos = train_type_infos_grouped_by_railway_line[ railway_line_info_id ] %>
