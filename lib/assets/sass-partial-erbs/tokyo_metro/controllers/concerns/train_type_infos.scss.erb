.<%= railway_line.css_class %> {
  <% train_type_infos.each do | train_type | %>
  .<%= train_type.css_class %> {
    $color: $<%= train_type.color_basename %>_color ;
    $bgcolor: $<%= train_type.color_basename %>_bgcolor ;
    @include gradationSettingsOfTrainTypeBox( $color , $bgcolor ) ;
  }
  <% end %>
}
<% end %>
